<div class="row">
    <h1 class="text-center">Much Pyramid-scheme! Such capitalism!</h1>
    <div class="col-xs-4 col-xs-offset-4">
        {{> images/dogetophat }}
    </div>

    <div class="col-xs-12 col-md-6 col-md-offset-6">
        <div class="panel panel-default margin-top-30px">
            <div class="panel-heading text-center">Inventory</div>
            <div class="panel-body">
                <table class="table table-bordered text-center">
                    <tbody>
                        <tr>
                            <td>Items:</td>
                            {{#each currentUser.inventory as |item|}}
                            <td><img class="" width="48" height="48" src="{{item.imgLocation}}"></td>
                            {{/each}}
                        </tr>
                        <tr>
                            <td>Quantity:</td>
                            {{#each currentUser.inventory as |item|}}
                            <td>{{item.quantity}}</td>
                            {{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
        <h3>Converts:</h3>
        {{> partials/_childTree user=user}}
        <h4>So excite! Much Wow!</h4>
    </div>
</div>
