<div class="row">
  <h1 class="text-center">Much Pyramid-scheme! Good kind!</h1>
    <div class="col-xs-4 col-xs-offset-4">
      {{> images/dogetophat }}
    </div>
    <div class="col-xs-6">
        <div class="panel panel-default">
            <div class="panel-heading">This is your referral link</div>
            <div class="panel-body"><a href="{{currentUser.referralLink}}">{{currentUser.referralLink}}</a></div>
        </div>
    </div>
    <div class="col-xs-6">
      Inventory:
      <table class="table table-bordered text-center">
        <tbody>
          <tr>
            <td>Items:</td>
            {{#each currentUser.inventory as |item|}}
              <td><img class="" width="48" height="48" src="{{item.imgLocation}}"></td>
              <td>Quantity: {{item.quantity}}</td>
            {{/each}}
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-xs-12">
        <h3>Converts:</h3>
            {{> partials/_childTree user=user}}

        <h4>So excite! Much Wow!</h4>
    </div>
</div>
